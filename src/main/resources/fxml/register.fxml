<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<Pane  prefHeight="900.0" prefWidth="1440.0" style="-fx-background-color: F1FEC6;" styleClass="container" stylesheets="@../styles.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.viduwa.minigames.controllers.RegisterController">
    <children>
        <VBox alignment="CENTER" prefHeight="720.0" prefWidth="421.0" styleClass="main">
            <children>
                <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Create an Account" textAlignment="CENTER">
                    <font>
                        <Font name="RimouskiSb-Regular" size="31.0" />
                    </font>
                </Text>

                <HBox alignment="TOP_CENTER" prefHeight="100.0" prefWidth="415.0" style="-fx-alignment: center;">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="ocean-wave-text,main-title" text="PixelFun" textAlignment="CENTER" wrappingWidth="416.90599822998047">
                            <font>
                                <Font name="Stormfaze-Regular" size="86.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
                <VBox alignment="TOP_CENTER" prefHeight="493.0" prefWidth="417.0" style="-fx-background-radius: 20; -fx-padding: 10;" styleClass="login-container">
                    <children>
                        <VBox prefHeight="120.0" prefWidth="324.0" style="-fx-padding: 10;">
                            <children>
                                <Label prefHeight="18.0" prefWidth="323.0" styleClass="text-label" stylesheets="@../styles.css" text="Username">
                                    <font>
                                        <Font name="RimouskiSb-Regular" size="20.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="usernameField" prefHeight="50.0" prefWidth="377.0" promptText="Username" style="-fx-background-radius: 10;" />
                            </children>
                        </VBox>
                        <VBox prefHeight="96.0" prefWidth="324.0" style="-fx-padding: 10;">
                            <children>
                                <Label prefHeight="18.0" prefWidth="323.0" styleClass="text-label" stylesheets="@../styles.css" text="Password">
                                    <font>
                                        <Font name="RimouskiSb-Regular" size="20.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="passwordField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="51.0" prefWidth="377.0" promptText="Password" style="-fx-background-radius: 10;" />
                            </children>
                        </VBox>
                        <VBox prefHeight="96.0" prefWidth="324.0" style="-fx-padding: 10;">
                            <children>
                                <Label prefHeight="18.0" prefWidth="323.0" styleClass="text-label" stylesheets="@../styles.css" text="Confirm Password">
                                    <font>
                                        <Font name="RimouskiSb-Regular" size="20.0" />
                                    </font>
                                </Label>
                                <PasswordField fx:id="confirmPasswordField" minHeight="-Infinity" minWidth="-Infinity" prefHeight="50.0" prefWidth="304.0" promptText="Confirm Password" style="-fx-background-radius: 10;" />
                            </children>
                        </VBox>

                        <Label fx:id="responseMsg" alignment="CENTER" style="-fx-padding: 0 0 8 0" text="" textFill="RED" wrapText="true" />

                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
                            <children>
                                <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegister" prefHeight="40.0" prefWidth="164.0" style="-fx-background-radius: 10;" styleClass="login-button" stylesheets="@../styles.css" text="Register">
                                    <font>
                                        <Font name="RimouskiSb-Regular" size="30.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>
                        <VBox prefHeight="76.0" prefWidth="397.0" style="-fx-padding: 10;">
                            <children>
                                <HBox alignment="CENTER" fillHeight="false" minHeight="-Infinity" minWidth="-Infinity" prefHeight="24.0" prefWidth="377.0" style="-fx-font-size: 18;">
                                    <children>
                                        <Label styleClass="text-label" text="Already have an account? " />
                                        <Hyperlink onAction="#openLogin" style="-fx-padding: 0;" styleClass="sign-up" text="Login" underline="true" />
                                    </children>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </children>
        </VBox>
    </children>
</Pane>
