<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.effect.InnerShadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: transparent;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.viduwa.minigames.controllers.SnakeLeaderboardController">

    <!-- Main Container with Snake Theme -->
    <BorderPane maxHeight="500" maxWidth="420" style="-fx-background-color: rgba(20, 50, 20, 0.85); -fx-border-color: #4CAF50; -fx-border-width: 3; -fx-background-radius: 0; -fx-border-radius: 0;">
        <effect>
            <DropShadow color="rgba(76, 175, 80, 0.5)" radius="10" spread="0.2" />
        </effect>

        <top>
            <VBox alignment="CENTER" spacing="8" style="-fx-padding: 20 15 15 15;">

                <!-- Snake Title -->
                <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: #81C784; -fx-effect: dropshadow(three-pass-box, rgba(129, 199, 132, 0.8), 3, 0, 1, 1);" text="SNAKE CHAMPIONS" textAlignment="CENTER">
                    <font>
                        <Font name="RimouskiSb-Regular" size="32.0" />
                    </font>
                </Label>

                <!-- Snake Subtitle -->
                <Label style="-fx-font-size: 16; -fx-text-fill: #A5D6A7; -fx-letter-spacing: 2px; -fx-font-weight: bold;" text="🐍 SLITHER TO VICTORY 🐍">
                    <font>
                        <Font name="RimouskiSb-Regular" size="16.0" />
                    </font>
                </Label>

                <!-- Decorative Line -->
                <Line endX="300" stroke="#4CAF50" strokeWidth="3" />
            </VBox>
        </top>

        <center>
            <VBox style="-fx-padding: 10 25 25 25;">
                <!-- Snake Themed Table -->
                <TableView fx:id="snakeLeaderboardTable" style="-fx-background-color: rgba(0, 20, 0, 0.3);
                                  -fx-border-color: #4CAF50;
                                  -fx-border-width: 2;
                                  -fx-font-size: 14px;
                                  -fx-table-cell-border-color: rgba(76, 175, 80, 0.3);
                                  -fx-selection-bar: rgba(129, 199, 132, 0.3);
                                  -fx-selection-bar-non-focused: rgba(129, 199, 132, 0.2);">

                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>

                    <columns>
                        <!-- Rank Column -->
                        <TableColumn fx:id="colPosition" prefWidth="100" style="-fx-alignment: CENTER; -fx-background-color: rgba(76, 175, 80, 0.15);" text="RANK" />

                        <!-- Player Column -->
                        <TableColumn fx:id="colName" prefWidth="350" style="-fx-alignment: CENTER-LEFT; -fx-background-color: rgba(76, 175, 80, 0.15);" text="PLAYER" />

                        <!-- Score Column -->
                        <TableColumn fx:id="colScore" prefWidth="250" style="-fx-alignment: CENTER; -fx-background-color: rgba(76, 175, 80, 0.15);" text="LENGTH" />
                    </columns>

                    <effect>
                        <InnerShadow choke="0.3" color="rgba(0, 20, 0, 0.4)" radius="5" />
                    </effect>
                </TableView>
            </VBox>
        </center>
    </BorderPane>

    <!-- Snake Themed Pixel Decorations -->
    <Label style="-fx-font-size: 12; -fx-text-fill: rgba(76, 175, 80, 0.4); -fx-translate-x: -320; -fx-translate-y: -200;" text="■" />
    <Label style="-fx-font-size: 8; -fx-text-fill: rgba(165, 214, 167, 0.3); -fx-translate-x: 310; -fx-translate-y: -180;" text="■" />
    <Label style="-fx-font-size: 10; -fx-text-fill: rgba(129, 199, 132, 0.3); -fx-translate-x: -300; -fx-translate-y: 200;" text="■" />
    <Label style="-fx-font-size: 6; -fx-text-fill: rgba(102, 187, 106, 0.4); -fx-translate-x: 330; -fx-translate-y: 190;" text="■" />

</StackPane>